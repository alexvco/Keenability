<!-- Page Heading/Breadcrumbs -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Listings
            <span class="pull-right"><%= link_to "Add a new listing", new_listing_path, class: "btn btn-primary" %></span>
        </h1>
        <ol class="breadcrumb">
            <li>
              <%= link_to "Home", root_path %>
            </li>
            <li class="active">Listings</li>
        </ol>
    </div>
</div>
<!-- /.row -->

<% @listings.in_groups_of(3, false) do |row_listing| %>

<!-- Projects Row -->
<div class="row">
    <% row_listing.each do |listing| %>
        <div class="col-md-4 img-portfolio">

            <%= link_to listing_path(listing) do %>
                <img class="img-responsive img-hover" src="http://placehold.it/700x400" alt="">
            <% end %>
            <h3>
                <%= link_to listing.title, listing_path(listing) %>
            </h3>
            <p><%= truncate(listing.description, length: 140) %></p>
        </div>
    <% end %>
</div>
<!-- /.row -->

<% end %>

<hr>

<!-- Pagination -->
<div class="row text-center">
    <div class="col-lg-12">
        <%= will_paginate @listings, renderer: BootstrapPagination::Rails %>
    </div>
</div>
<!-- /.row -->
